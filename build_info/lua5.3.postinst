#!/bin/sh -e

case "$1" in
    configure)
        update-alternatives \
            --install @MEMO_PREFIX@@MEMO_SUB_PREFIX@/bin/lua lua-interpreter @MEMO_PREFIX@@MEMO_SUB_PREFIX@/bin/lua5.3 120 \
            --slave @MEMO_PREFIX@@MEMO_SUB_PREFIX@/share/man/man1/lua.1.zst lua-manual \
                @MEMO_PREFIX@@MEMO_SUB_PREFIX@/share/man/man1/lua5.3.1.zst
        update-alternatives \
            --install @MEMO_PREFIX@@MEMO_SUB_PREFIX@/bin/luac lua-compiler @MEMO_PREFIX@@MEMO_SUB_PREFIX@/bin/luac5.3 120 \
            --slave @MEMO_PREFIX@@MEMO_SUB_PREFIX@/share/man/man1/luac.1.zst lua-compiler-manual \
                @MEMO_PREFIX@@MEMO_SUB_PREFIX@/share/man/man1/luac5.3.1.zst
        ;;
esac
