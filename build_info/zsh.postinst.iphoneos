#!/bin/sh

set -e

case "$1" in
    (configure)
        add-shell @MEMO_PREFIX@/bin/zsh
        add-shell @MEMO_PREFIX@@MEMO_SUB_PREFIX@/bin/zsh
    ;;
    (abort-upgrade|abort-remove|abort-deconfigure)
	exit 0
    ;;
    (*)
	echo "postinst called with unknown argument \`$1'" >&2
	exit 0
    ;;
esac

exit 0
