#!/bin/sh
set -e

if [ "$1" = 'configure' ]; then
	pw useradd -n gitea -d @MEMO_PREFIX@/var/lib/gitea -s /bin/sh -m &>/dev/null || true
	sleep 1 # We have to wait for dpkg-statoverride will not sleep the user gitea (?)
	if ! dpkg-statoverride --list @MEMO_PREFIX@/etc/gitea.ini; then
		dpkg-statoverride --update --add root gitea 660 @MEMO_PREFIX@/etc/gitea.ini
	fi
fi
