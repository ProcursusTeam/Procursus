#!/bin/sh

set -e

mandir=@MEMO_PREFIX@@MEMO_SUB_PREFIX@/share/man

if [ "$1" = "configure" ]
then
  update-alternatives \
    --install @MEMO_PREFIX@@MEMO_SUB_PREFIX@/bin/progress progress @MEMO_PREFIX@@MEMO_SUB_PREFIX@/bin/bsd-progress 20 \
    --slave $mandir/man1/progress.1.zst progress.1.zst $mandir/man1/bsd-progress.1.zst
fi
